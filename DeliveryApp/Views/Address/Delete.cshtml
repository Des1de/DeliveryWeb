@model Address

<h1>Вы уверены, что хотите удалить этот адрес?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="City">Город</label>
        <input asp-for="City" disabled class="form-control" placeholder="Город">
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <label asp-for="Street">Улица</label>
        <input asp-for="Street" disabled type="file" class="form-control" placeholder="Улица">
        <span asp-validation-for="Street" class="text-danger"></span>

	</div>
    <div class="form-group">
		<label asp-for="House">Дом</label>
		<input asp-for="House" disabled class="form-control" placeholder="Дом">
		<span asp-validation-for="House" class="text-danger"></span>
	</div>
</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>