@model IEnumerable<Address>
@{
    ViewData["Title"] = "Restaraunt addresses";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-8"></div>

    </div>
    <div class="container mt-5">
        <div class="row">
            <h1 class="h3 mb-3 fw-normal">Адреса ресторанов</h1>
            <div class="col-12 col-md-8"></div>
            <div class="col-6 col-md-4">
                
            </div>
            @foreach (var item in Model)
            {
                <div class="col-md-4">

                    <div class="card mb-4 box-shadow">
                        <div class="card-body">
                            <p class="card-text">@item.City</p>
                            <p class="card-text">@item.Street, @item.House</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Address" asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Address" asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                                    }                                
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
