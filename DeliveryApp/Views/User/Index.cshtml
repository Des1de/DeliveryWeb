@using DeliveryApp.ViewModels;
@model List<UserViewModel>

<body>
    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Список пользователей</h2>
            </div>
        </div>
    </div>

    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Эл. Почта
                </th>
                <th>
                    Домашний адрес
                </th>
                <th>
                    Номер телефона
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="17%">
                        @obj.Id
                    </td>
                    <td width="17%">
                        @obj.EmailAddress
                    </td>
                    <td width="17%">
                        @obj.HomeAddress
                    </td>
                    <td width="17%">
                        @obj.PhoneNumber
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>