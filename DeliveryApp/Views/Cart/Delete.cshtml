@model CartDish

<h1>Вы уверены, что хотите удалить это блюдо из корзины?</h1>

<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Название</label>
        <input asp-for="Name" disabled class="form-control" placeholder="Название">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" disabled class="form-control" placeholder="Описание">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
<div class="form-group">
        <label asp-for="Price">Цена</label>
        <input asp-for="Price" disabled class="form-control" placeholder="Цена">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

</form>
<div class="form-group">
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger float-right mt-3" />
    </form>
</div>
